        // --- Currency utilities (symbol only; no conversion of values) ---
        const codeToSymbol = (code) => ({ AMD: 'Ö', SYR: 'SYR', USD: '$', EUR: 'â‚¬' }[code] || 'Ö');
        const symbolToCode = (symbol) => {
            switch(symbol){ case 'Ö': return 'AMD'; case 'SYR': return 'SYR'; case '$': return 'USD'; case 'â‚¬': return 'EUR'; default: return 'AMD'; }
